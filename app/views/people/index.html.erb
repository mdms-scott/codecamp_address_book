<section>
  <h1>Addresses</h1>
</section>
<section id="address_table">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Last Name</th>
        <th>First Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <%- @people.each do |person| %>
        <tr>
          <td><%= person.last_name %></td>
          <td><%= person.first_name %></td>
          <td><%= person.email %></td>
          <td><%= person.phone %></td>
          <td>
            <%= link_to 'View', person_path(person) %> | 
            <%= link_to 'Edit', edit_person_path(person) %> |
            <%= link_to 'Delete', person, :method => :delete, :data => { :confirm => "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
<br />
<%= link_to "New Person", new_person_path, :class => 'btn' %>